@model CodeTunnel.Domain.Entities.BlogPost
@{
    ViewBag.Title = "New Post";
}
<div style="text-align: center;">
    @using (Html.BeginForm())
    {
        <div class="form" style="width: 90%; margin: auto;">
            <div class="opacityFrame">
            </div>
            <div class="subFrame">
                @Html.ValidationSummary()
                <div class="formTitle">
                    @ViewBag.FormTitle
                </div>
                Title:<br />
                @Html.TextBoxFor(x => x.Title, new { style = "width: 100%;", tabindex = "1" })<br />
                <br />
                Body:<br />
                @Html.TextAreaFor(x => x.Body, new { style = "width: 100%; height: 350px;", @class = "wmd", tabindex = "2" })
                <br />
                <input type="submit" value="Save" tabindex="2" />
            </div>
        </div>
    }
</div>
